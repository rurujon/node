<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>구글맵2</title>

    <style type="text/css">
        *{
            margin: 0;
            padding: 0;
        }

        html, body{
            width: 100%;
            height: 100%;
        }

        #map{
            width: 100%;
            height: 100%;
        }
    </style>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCxgSpw5aHnyVE8_MhnxWji5qK8Cjl6zzQ"></script>

    <script type="text/javascript">

        function onLoad(){
            initMap()
        }

        var map
        var myLocation = {lng:<%=longitude%>,lat:<%=latitude%>} //ITWILL
        //var centerLocation = {lng:127.036430,lat:37.500613} //역삼역

        var starbucksLocation = 
            {lng:<%=result.geometry.coordinates[0]%>,        
            lat:<%=result.geometry.coordinates[1]%>}        

        function initMap(){

            map = new google.maps.Map(document.getElementById('map'),{
                center : myLocation,
                zoom : 17 //1-22
            })

            //내위치
            var myMarker = new google.maps.Marker({
                position : myLocation,
                icon : '../public/image/mylocation.png',
                animation : google.maps.Animation.BOUNCE,
                title : 'ITWILL'
            })

            myMarker.setMap(map)

            //스타벅스 위치
            var starbucksMarker = new google.maps.Marker({
                position : starbucksLocation,
                icon : '../public/image/coffee.png',
                animation : google.maps.Animation.BOUNCE,
                title : '국기원점'
            })

            starbucksMarker.setMap(map)

        }


    </script>

</head>
<body onload="onLoad();">
   <p>가까운 스타벅스 지도 찾기</p>
   <div id="map"></div>
    

</body>
</html>